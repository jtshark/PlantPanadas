@startuml

class Gamer {
  username
  dateOfBirth
  playGame()
  purchaseItem()
  interactWithOtherPlayer()
  getAge()
}

class Game {
  title
  releaseDate
  developer
}

class GameDeveloper {
  name
  gamesDeveloped
  releaseGame()
  monitorUserBehavior()
  manageCommunityEngagement()
}

class InGameItem {
  price
  discount
  getDiscountedPrice()
}

Gamer "1" -- "many" Game : plays
Gamer "1" -- "many" InGameItem : purchases
Gamer "1" -- "many" Gamer : interacts with
GameDeveloper "1" -- "many" Game : manages
GameDeveloper "1" -- "many" Gamer : monitors

@enduml