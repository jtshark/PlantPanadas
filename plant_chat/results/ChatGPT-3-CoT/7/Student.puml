@startuml
class Student {
  - name: String
  - email: String
  - password: String
  - assignments: List<Assignment>
  - classes: List<Class>
  + attendClass(class: Class): void
  + submitAssignment(assignment: Assignment): void
  + communicateWithTeacher(teacher: Teacher, message: String): void
  + communicateWithPeers(class: Class, message: String): void
}
@enduml